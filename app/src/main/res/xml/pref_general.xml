<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:title="@string/location_label"
        android:key="@string/pref_location_key"
        android:defaultValue="@string/pref_location_default"
        android:inputType="text"
        />
    <ListPreference
        android:key="@string/pref_temp_key"
        android:title="@string/temperature_label"
        android:entries="@array/pref_temp_entries"
        android:entryValues="@array/pref_temp_values"
        android:defaultValue="@string/metric_label"
        />
</PreferenceScreen>